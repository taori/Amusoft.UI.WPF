<Window x:Class="Amusoft.UI.WPF.Playground.BackgroundThreadAwait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amusoft.UI.WPF.Playground"
        mc:Ignorable="d"
        Title="BackgroundThreadAwait" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="ctrlTextBlock"></TextBlock>
        <Button Grid.Row="1" Click="ButtonBase_OnClick" Content="Start Background call"></Button>
        
    </Grid>
</Window>
